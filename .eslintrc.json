{
    "extends": "airbnb",
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "rules": {
      "no-did-mount-set-state": ["off", "always"],
      "no-console": ["off"],
      "semi": ["off", "always"],
      "quotes": ["error", "single"],
      "key-spacing": ["error", { "mode": "minimum" }],
      "no-undef": ["error", { "typeof": true }],
      "no-multi-spaces": ["off", {
        "exceptions": {
          "VariableDeclarator": true,
          "ImportDeclaration": true,
          "Property": true,
          "BinaryExpression": true
          }
      }],
      "forbid-prop-types": ["off", { "forbid": ["any", "object"] }]
    },
    "globals": {
      "document": true,
      "window": true,
      "fetch": true
    }
}
